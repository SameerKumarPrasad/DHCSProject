<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="1500dp"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"

            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Orders"
                    android:textSize="20dp"

                    android:textColor="#d64d4d"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="25dp"
                android:paddingLeft="70dp"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:text="Next"
                    android:onClick="buttonClickHandler"
                    android:id="@+id/confirm1"
                    android:textColor="#4d7358"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="                 "
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_width="wrap_content"
                    android:text="Done"
                    android:id="@+id/done1"
                    android:textColor="#4d7358"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="1500dp"
                    android:layout_height="20dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#e39e54"            >

                    <TextView
                        android:id="@+id/ts"
                        android:text="timestamp"
                        android:layout_marginLeft="20dp"
                        android:textSize="15dp"
                        android:layout_weight="0"
                        android:textStyle="bold"
                        android:textColor="#e39e54"
                        android:layout_marginTop="0dp"
                        android:layout_width="200dp"

                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/name"
                        android:text="name"
                        android:textSize="15dp"
                        android:layout_weight="0"
                        android:textStyle="bold"
                        android:textColor="#e39e54"
                        android:layout_width="80dp"
                        android:layout_height="100dp" />
                    <TextView
                        android:id="@+id/place"
                        android:text="place"
                        android:textSize="15dp"
                        android:layout_weight="0"
                        android:textStyle="bold"
                        android:textColor="#e39e54"
                        android:layout_width="80dp"
                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/idli"
                        android:text="idli"
                        android:textSize="15dp"
                        android:layout_weight="0"
                        android:textStyle="bold"
                        android:textColor="#e39e54"

                        android:layout_width="80dp"

                        android:layout_height="100dp" />
                    <TextView
                        android:id="@+id/dosa"
                        android:text="dosa"
                        android:layout_width="80dp"
                        android:textSize="15dp"
                        android:layout_weight="0"
                        android:textStyle="bold"
                        android:textColor="#e39e54"

                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/vada"
                        android:text="vada"
                        android:layout_width="80dp"
                        android:textSize="15dp"
                        android:layout_weight="0"
                        android:textStyle="bold"
                        android:textColor="#e39e54"

                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/roll"
                        android:text="roll"
                        android:layout_width="80dp"
                        android:textSize="15dp"
                        android:layout_weight="0"
                        android:textStyle="bold"
                        android:textColor="#e39e54"

                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/hakka"
                        android:text="hakka"
                        android:layout_width="80dp"
                        android:textSize="15dp"
                        android:layout_weight="0"
                        android:textStyle="bold"
                        android:textColor="#e39e54"

                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/samosa"
                        android:text="samosa"
                        android:layout_width="80dp"
                        android:textSize="15dp"
                        android:layout_weight="0"
                        android:textStyle="bold"
                        android:textColor="#e39e54"

                        android:layout_height="100dp" />


                    <TextView
                        android:id="@+id/momos"
                        android:text="momos"
                        android:layout_width="80dp"
                        android:textSize="15dp"
                        android:layout_weight="0"
                        android:textStyle="bold"
                        android:textColor="#e39e54"

                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/burger"
                        android:text="Burger"
                        android:layout_width="80dp"
                        android:textSize="15dp"
                        android:layout_weight="0"
                        android:textStyle="bold"
                        android:textColor="#e39e54"

                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/mobileno"
                        android:text="mobileno"
                        android:layout_width="80dp"
                        android:textSize="15dp"
                        android:layout_weight="0"
                        android:textStyle="bold"
                        android:textColor="#e39e54"

                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/chowmein"
                        android:text="chowmein"
                        android:layout_width="80dp"
                        android:textSize="15dp"
                        android:layout_weight="0"
                        android:textStyle="bold"
                        android:textColor="#e39e54"

                        android:layout_height="100dp" />




                </LinearLayout>
            </ScrollView>

            <LinearLayout

                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ly1"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content">

                <ListView
                    android:layout_below="@+id/done1"
                    android:id="@+id/listview"
                    android:layout_width="1000px"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>






    </LinearLayout>

</HorizontalScrollView>